.container-fluid
  .row
    .col-md-12.col-sm-12
      - if @movies.present?
        .table-responsive
          %table.table.table-striped
            %thead
              %tr
                %th
                %th
                %th
                %th Storage ID
            %tbody
              - @movies.each do |movie|
                %tr
                  %td.poster-image
                    %img{src: movie.poster, alt: movie.title}
                  %td
                    = link_to movie.title, movie_path(movie)
                    %br
                    = "#{movie.year} (#{movie.length} mins)"
                  %td= movie.plot
                  %td= movie.storage_identifier
      - else
        You don't have any movies yet.

.page-header
  %h1 Lights, Camera, Index!
.container-fluid
  .row
    .col-md-4.col-md-offset-4
      %h2 Sign in

  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .row
      .form-group.col-md-4.col-md-offset-4
        = f.label :email, for: "input-email"
        = f.email_field :email, class: "form-control", id: "input-email", autofocus: true
    .row
      .form-group.col-md-4.col-md-offset-4
        = f.label :password, for: "input-password"
        = f.password_field :password, class: "form-control", id: "input-password", autocomplete: "off"
    - if devise_mapping.rememberable?
      .row
        .form-group.col-md-4.col-md-offset-4
          = f.check_box :remember_me
          = f.label :remember_me
    .row
      .form-group.col-md-4.col-md-offset-4
        = f.submit "Sign in", class: "btn btn-primary"
  .row
    .col-md-4.col-md-offset-4
      = render "devise/shared/links"
